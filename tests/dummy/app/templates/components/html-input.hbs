<div class="form-group">
  <label for="{{key}}">{{label}}</label>

  {{#if (eq type "checkbox")}}
    {{input class="form-control"
      checked=(mut value)
      name=key
      type=type
      placeholder=placeholder }}
  {{else}}
    {{input class="form-control"
    value=(mut value)
      name=key
      type=type
      placeholder=placeholder }}
    {{/if}}
</div>

